  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: FastAPI",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "cwd": "${workspaceFolder}/apps/api",
      "args": ["src.main:app", "--reload", "--host", "0.0.0.0"],
      "jinja": true,
      "justMyCode": false,
      "envFile": "${workspaceFolder}/apps/api/config/.env",
      "env": {
        "PORT": "8000",
        "OPENAI_API_KEY": "xxx",
        "DATABASE_URL": "postgresql://postgres:postgres@127.0.0.1:54322/postgres",
        "DROPBOX_CLIENT_ID": "xxx",
        "DROPBOX_CLIENT_SECRET": "xxx",
        "CLOUD_STORAGE_EMULATOR_HOST": "http://localhost:4443"
      }
    },
    {
      "name": "Python: Debug Tests",
      "type": "debugpy",
      "request": "launch",
      "purpose": ["debug-test"],
      "module": "pytest",
      "cwd": "${workspaceFolder}/apps/api",
      "args": ["tests", "${file}"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "envFile": "${workspaceFolder}/apps/api/config/.env.test",
      "env": {
        "PORT": "8000",
        "OPENAI_API_KEY": "xxx",
        "DATABASE_URL": "postgresql://postgres:postgres@127.0.0.1:54322/postgres",
        "DROPBOX_CLIENT_ID": "xxx",
        "DROPBOX_CLIENT_SECRET": "xxx",
        "CLOUD_STORAGE_EMULATOR_HOST": "http://localhost:4443"
      }
    },
    {
      "name": "Next.js: start",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/apps/reader",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Next.js: debug client",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/apps/reader",
      "sourceMapPathOverrides": {
        "webpack://_N_E/*": "${webRoot}/*"
      }
    }
  ]
}
