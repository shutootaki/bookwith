  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: FastAPI",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "cwd": "${workspaceFolder}/apps/fastapi-app",
      "args": ["src.main:app", "--reload", "--host", "0.0.0.0"],
      "jinja": true,
      "justMyCode": false,
      "envFile": "${workspaceFolder}/apps/fastapi-app/config/.env",
      "env": { "PORT": "8000" }
    },
    {
      "name": "Python: Debug Tests",
      "type": "debugpy",
      "request": "launch",
      "purpose": ["debug-test"],
      "module": "pytest",
      "cwd": "${workspaceFolder}/apps/fastapi-app",
      "args": ["tests", "${file}"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "envFile": "${workspaceFolder}/apps/fastapi-app/config/.env.test",
      "env": { "PORT": "8000" }
    }
  ]
}
